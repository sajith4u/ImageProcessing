<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white">
    <LinearLayout android:orientation="horizontal"
                  android:background="@color/white"
                  android:layout_width="fill_parent"
                  android:layout_height="80dp">
        <ImageButton
                android:layout_width="84dp"
                android:layout_height="77dp"
                android:id="@+id/openCamera" android:layout_gravity="left|center_vertical" android:src="@drawable/cam"
                android:background="@color/white"/>
        <ImageButton
                android:layout_width="84dp"
                android:layout_height="77dp"
                android:id="@+id/grayImage" android:layout_gravity="left|center_vertical" android:src="@drawable/gray"
                android:background="@color/white"/>


    </LinearLayout>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/camimage"/>
</LinearLayout>

